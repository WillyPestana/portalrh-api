{
  "PortalRH": {
    "GroupPrefix": "PK.",
    "CorsOrigins": [ "http://localhost:5000", "http://localhost:3000"]
  },
  "MongoDB": {
    "Connection": "mongodb://mongo:27017/",
    "Database": "PortalRH"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "StaticFiles": {
    "On": true,
    "ServeUnknownFileTypes": true,
    "DefaultContentType": "text/plain",
    "FileProvider": {
      "Type": "Physical",
      "Properties": {
        "Root": "wwwroot"
      }
    },
    "DirectoryBrowser": {
      "Enabled": true,
      "FileProvider": {
        "Type": "Physical",
        "Properties": {
          "Root": "wwwroot"
        }
      }
    }
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:5000"
      }
    }
  }
}